<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="BorderPane" prefHeight="227.0" prefWidth="395.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.eljaiek.jmira.app.controller.EditSourceController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="URI:">
               <VBox.margin>
                  <Insets left="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="uriTextField">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Distribution:">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="distsTextField">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Components:">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="compTextField">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
   </center>
   <bottom>
      <FlowPane alignment="TOP_RIGHT" prefHeight="32.0" prefWidth="397.0" BorderPane.alignment="CENTER">
         <children>
            <Button disable="${controller.disabled}" mnemonicParsing="false" prefWidth="80.0" text="OK" onAction="#accept" >
               <FlowPane.margin>
                  <Insets top="3.0" />
               </FlowPane.margin>
            </Button>
            <Button cancelButton="true" defaultButton="true" mnemonicParsing="false" prefWidth="80.0" text="Cancel" onAction="#cancel">
               <FlowPane.margin>
                  <Insets left="5.0" right="10.0" top="3.0" />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
   </bottom>
</BorderPane>
