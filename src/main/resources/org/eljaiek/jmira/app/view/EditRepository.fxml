<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import org.controlsfx.control.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="BorderPane" prefHeight="272.0" prefWidth="489.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.eljaiek.jmira.app.controller.EditRepositoryController">
   <center>
      <TabPane prefHeight="283.0" prefWidth="472.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="General">
            <content>
              <VBox minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label text="Name:">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="nameTextField" prefHeight="25.0" prefWidth="476.0" promptText="Type a name for the repository">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <Label text="Home:">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <HBox prefHeight="25.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="5.0" />
                           </VBox.margin>
                           <children>
                              <TextField fx:id="homeTextField" editable="false" prefHeight="25.0" prefWidth="60000.0" />
                              <Button mnemonicParsing="false" onAction="#browseDirectory" text="..." />
                           </children>
                        </HBox>
                        <Label text="Architectures:">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <CheckComboBox fx:id="archsComboBox" prefHeight="25.0" prefWidth="92.0">
                           <VBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </VBox.margin>
                        </CheckComboBox>
                     </children></VBox>
            </content>
          </Tab>
          <Tab text="Sources">
            <content>
              <BorderPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <center>
                        <CheckListView BorderPane.alignment="CENTER" />
                     </center>
                     <bottom>
                        <HBox prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" text="New...">
                                 <HBox.margin>
                                    <Insets left="5.0" top="2.0" />
                                 </HBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" text="Edit...">
                                 <HBox.margin>
                                    <Insets left="5.0" top="2.0" />
                                 </HBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" text="Delete">
                                 <HBox.margin>
                                    <Insets left="5.0" top="2.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                        </HBox>
                     </bottom></BorderPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <HBox alignment="TOP_RIGHT" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="okButton" disable="true" mnemonicParsing="false" text="Accept" onAction="#acceptAction" >
               <HBox.margin>
                  <Insets right="5.0" top="2.0" />
               </HBox.margin>
            </Button>
            <Button cancelButton="true" defaultButton="true" mnemonicParsing="false" text="Cancel" onAction="#closeAction" >
               <HBox.margin>
                  <Insets top="2.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets right="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
